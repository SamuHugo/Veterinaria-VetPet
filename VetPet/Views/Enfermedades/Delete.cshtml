@model VetPet.Models.EnfermedadesEntity

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres borrar la siguiente enfermedad?</p>
<p><strong>@Model.DescripcionEnferm </strong></p>

<form asp-action="ConfirmedDelete">
    <input type="hidden" asp-for="Id" />
    
    <button type="submit" class="btn btn-danger">Sí, Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
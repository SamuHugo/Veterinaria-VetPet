@model VetPet.Models.UsuarioEntity

<h2 class="titulo">Crear Nuevo Usuario</h2>

<div class="form-container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Apellido">Apellidos</label>
            <input asp-for="Apellido" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="NumeroDocumento">Numero de Documento</label>
            <input asp-for="NumeroDocumento" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Telefono">Telefono</label>
            <textarea asp-for="Telefono" class="form-control" rows="4" required></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Direccion">Direccion</label>
            <input asp-for="Direccion" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="Genero">Genero</label>
            <select asp-for="Genero.Id" class="form-control" required>
                <option value="">Seleccione un genero</option>
                @foreach (var genero in ViewBag.Genero)
                {
                    <option value="@genero.Id">@genero.Descripcion</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
            <input asp-for="FechaNacimiento" type="date" class="form-control" required>
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
       

        <div class="form-group">
            <label asp-for="Correo">Correo</label>
            <input asp-for="Correo" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Contrasena">Contraseña</label>
            <input asp-for="Contrasena" type="text" class="form-control" required>
        </div>


        <div class="form-group">
            <label asp-for="Imagen">Imagen del Usuario</label>
            <input asp-for="Imagen" type="file" class="form-control-file" id="imagenInput" accept="image/*">
            <div id="imagenPreviewContainer" style="display: none;">
                <img id="imagenPreview" src="#" alt="Vista previa de la imagen" style="max-width: 200px; max-height: 200px;" />
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar Usuario</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
    }
</style>

<script>
    document.getElementById("imagenInput").addEventListener("change", function () {
        var fileInput = this;
        var imgPreviewContainer = document.getElementById("imagenPreviewContainer");
        var imgPreview = document.getElementById("imagenPreview");

        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                imgPreview.src = e.target.result;
                imgPreviewContainer.style.display = "block";
            };

            reader.readAsDataURL(fileInput.files[0]);
        } else {
            imgPreview.src = "";
            imgPreviewContainer.style.display = "none";
        }
    });
</script>
@model VetPet.Models.UsuarioEntity

<h2 class="titulo">Editar Producto</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <img src="~/img/@Model.Imagen" alt="Imagen del producto" style="max-width: 100px; max-height: 100px" />
        </div>

        <div class="form-group">
            <label asp-for="Apellido">Apellido</label>
            <input asp-for="Apellido" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="NumeroDocumento">Numero de Documento</label>
            <input asp-for="NumeroDocumento" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Telefono">Telefono</label>
            <textarea asp-for="Telefono" class="form-control" rows="4" required></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Direccion">Direccion</label>
            <input asp-for="Direccion" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="Genero.Id">Genero</label>
            <select asp-for="Genero.Id" asp-items="ViewBag.Genero" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
            <input asp-for="FechaNacimiento" class="form-control" type="date" required>
        </div>

        <div class="form-group">
            <label asp-for="Correo">Correo</label>
            <input asp-for="Correo" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Contrasena">Contraseña</label>
            <input asp-for="Contrasena" type="text" class="form-control" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .form-group {
        flex-basis: 45%;
    }
</style>

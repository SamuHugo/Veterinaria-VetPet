@model List<VetPet.Models.MedicoEntity>

<h2 class="titulo">Mantenimiento de Medicos</h2>

<div class="crearnuevo">
    <a asp-controller="Medico" asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Numero de Documento</th>
                <th>Tipo de Documento</th>
                <th>Sede Clinica</th>
                <th>Genero</th>
                <th>Estado Civil</th>
                <th>Especialidad</th>
                <th>Telefono1</th>
                <th>Telefono2</th>
                <th>Direccion</th>
                <th>Descripcion Profesional</th>
                <th>Correo</th>
                <th>Contrasena</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medico in Model)
            {
                <tr>
                    <td>@medico.Id</td>
                    <td>
                        <img src="~/img/@medico.Imagen" alt="Imagen del Medico" style="max-width: 100px; max-height: 100px" />
                    </td>
                    <td>@medico.Nombre</td>
                    <td>@medico.Apellido</td>
                    <td>@medico.NumeroDocumento</td>
                    <td>@medico.TipoDocumento?.Descripcion</td>
                    <td>@medico.SedeClinica?.Nombre</td>
                    <td>@medico.Genero?.Descripcion</td>
                    <td>@medico.EstadoCivil?.Descripcion</td>
                    <td>@medico.Especialidad?.Descripcion</td>
                    <td>@medico.Telefono1</td>
                    <td>@medico.Telefono2</td>
                    <td>@medico.Direccion</td>
                    <td>@medico.DescripProfesional</td>
                    <td>@medico.Correo</td>
                    <td>@medico.Contrasena</td>                 
                    <td>
                        <a asp-controller="Medico" asp-action="Edit" asp-route-id="@medico.Id" class="btn btn-info btn-sm crud-button">Editar</a>
                    </td>
                    <td>
                        <a asp-controller="Medico" asp-action="Delete" asp-route-id="@medico.Id" class="btn btn-danger btn-sm crud-button">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .crearnuevo {
        text-align: left;
        margin-bottom: 10px;
    }

    .crud-button {
        margin-left: 5px;
    }
</style>

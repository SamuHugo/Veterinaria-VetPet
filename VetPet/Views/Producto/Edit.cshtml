@model VetPet.Models.ProductoEntity

<h2 class="titulo">Editar Producto</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <img src="~/img/@Model.Imagen" alt="Imagen del producto" style="max-width: 100px; max-height: 100px" />
        </div>

        <div class="form-group">
            <label asp-for="Nonbre">Nombre</label>
            <input asp-for="Nonbre" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="DescripcionProd">Descripción</label>
            <input asp-for="DescripcionProd" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="CaracteristicasProd">Características</label>
            <textarea asp-for="CaracteristicasProd" class="form-control" rows="4" required></textarea>
        </div>

        <div class="form-group">
    <label for="Marca.Id">Marca</label>
    <select asp-for="Marca.Id" asp-items="ViewBag.Marca" class="form-control"></select>
</div>

<div class="form-group">
    <label for="Categoria.Id">Categoría</label>
    <select asp-for="Categoria.Id" asp-items="ViewBag.Categoria" class="form-control"></select>
</div>

<div class="form-group">
    <label for="TipoAnimal.Id">Tipo de Animal</label>
    <select asp-for="TipoAnimal.Id" asp-items="ViewBag.TipoAnimal" class="form-control"></select>
</div>


        <div class="form-group">
            <label asp-for="SKU">SKU (Código de Item)</label>
            <input asp-for="SKU" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Precio">Precio</label>
            <input asp-for="Precio" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Stock">Stock</label>
            <input asp-for="Stock" class="form-control" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .form-group {
        flex-basis: 45%;
    }
</style>

@model VetPet.Models.EstadoCivilEntity

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres borrar la siguiente estado?</p>
<p><strong>@Model.Descripcion </strong></p>

<form asp-action="ConfirmedDelete">
    <input type="hidden" asp-for="Id" />
    
    <button type="submit" class="btn btn-danger">Sí, Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@model List<VetPet.Models.EspecialidadEntity>

<h2 class="titulo">Mantenimiento de Especialidades</h2>

<div class="crearnuevo">
    <a asp-controller="Especialidad" asp-action="Create" class="btn btn-primary">Crear Nueva</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var especialidad in Model)
            {
                <tr>
                    <td>@especialidad.Id</td>
                    <td>@especialidad.Descripcion</td>
                    <td>
                        <a asp-controller="Especialidad" asp-action="Edit" asp-route-id="@especialidad.Id" class="btn btn-info btn-sm crud-button">Editar</a>
                    </td>
                    <td>
                        <a asp-controller="Especialidad" asp-action="Delete" asp-route-id="@especialidad.Id" class="btn btn-danger btn-sm crud-button">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .crearnuevo {
        text-align: left;
        margin-bottom: 10px;
    }

    .crud-button {
        margin-left: 5px;
    }
</style>

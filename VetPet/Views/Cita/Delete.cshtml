@model VetPet.Models.CitaMedicaEntity

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que quieres borrar la siguiente cita con el siguiente medico?</p>
<p><strong>@Model.Medico.Nombre @Model.Medico.Apellido por @Model.Motivo </strong></p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    
    <button type="submit" class="btn btn-danger">Sí, Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@model List<VetPet.Models.CitaMedicaEntity>

<h2 class="titulo">Mantenimiento de Citas</h2>

<div class="crearnuevo">
    <a asp-controller="Cita" asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NombreContacto</th>
                <th>Motivo</th>               
                <th>DetalleCita</th>
                <th>TelefContacto</th>                   
                <th>Sede</th>
                <th>Especialidad</th>
                <th>Medico</th>
                <th>Usuario</th>
                <th>FechaCita</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var citaMedica in Model)
            {
                <tr>
                    <td>@citaMedica.Id</td>
                    <td>@citaMedica.NombreContacto</td>
                    <td>@citaMedica.Motivo</td>
                    <td>@citaMedica.DetalleCita</td>
                    <td>@citaMedica.TelefContacto</td>
                    <td>@citaMedica.SedeClinica?.Nombre</td>
                    <td>@citaMedica.Especialidad?.Descripcion</td>
                    <td>@citaMedica.Medico?.Nombre @citaMedica.Medico.Apellido</td>
                    <td>@citaMedica.Usuario?</td>
                    <td>@citaMedica.FechaCita.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-controller="Cita" asp-action="Edit" asp-route-id="@citaMedica.Id" class="btn btn-info btn-sm crud-button">Editar</a>
                    </td>
                    <td>
                        <a asp-controller="Cita" asp-action="Delete" asp-route-id="@citaMedica.Id" class="btn btn-danger btn-sm crud-button">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .titulo {
        text-align: center;
        color: blue;
        margin-bottom: 20px;
    }

    .crearnuevo {
        text-align: left;
        margin-bottom: 10px;
    }

    .crud-button {
        margin-left: 5px;
    }
</style>
